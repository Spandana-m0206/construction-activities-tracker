{
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
      "node/no-unsupported-features/es-syntax": [
        "error",
        { "ignores": ["modules"] }
      ]
    }
  }